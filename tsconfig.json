{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@stefanprobst/tsconfig-lib",
	"compilerOptions": {
		"baseUrl": ".",
		"exactOptionalPropertyTypes": false,
		"incremental": false,
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx", "./**/*.config.cjs"],
	"exclude": ["dist", "node_modules"]
}
